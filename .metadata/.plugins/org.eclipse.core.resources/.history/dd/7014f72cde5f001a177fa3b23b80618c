<script>
var totalPages = $
{
	model.totalPage
};
var currentPage = $
{
	model.page
};
var limit = 2;
$(function() {
	window.pagObj = $('#pagination').twbsPagination({
		totalPages : totalPages,
		visiblePages : 10,
		startPage : currentPage,
		onPageClick : function(event, page) {

			if (currentPage != page) {
				$('#maxPageItem').val(limit);
				$('#page').val(page);
				$('#sortName').val('title');
				$('#sortBy').val('desc');
				$('#formSubmit').submit();
				$('#type').val('list');
			}
		}
	});
});
</script>
